{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["components/*"],
      "@screens/*": ["screens/*"],
      "@hooks/*": ["hooks/*"],
      "@types/*": ["types/*"],
      "@api/*": ["api/*"],
      "@navigation/*": ["navigation/*"],
      "@utils/*": ["utils/*"],
      "@types": ["types/index.ts"],
      "@utils": ["utils/index.ts"]
    }
  }
}
